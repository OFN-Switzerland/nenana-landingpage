{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "number"
    },
    "date": {
      "type": "string",
      "format": "date-time",
      "description": "Date must be in ISO format"
    },
    "stores": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Store name is required"
          },
          "description": {
            "type": ["string", "null"]
          },
          "address": {
            "type": "object",
            "properties": {
              "street": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "zip": {
                "type": "string"
              },
              "country": {
                "type": "string"
              },
              "position": {
                "type": "object",
                "properties": {
                  "latitude": {
                    "type": "number"
                  },
                  "longitude": {
                    "type": "number"
                  }
                },
                "required": ["latitude", "longitude"]
              }
            },
            "required": ["street", "city", "state", "zip", "country", "position"]
          },
          "contact": {
            "type": "object",
            "properties": {
              "phone": {
                "type": ["string", "null"]
              },
              "email": {
                "type": ["string", "null"],
                "format": "email"
              }
            }
          },
          "forwardUrl": {
            "type": ["string", "null"],
            "format": "uri"
          },
          "status": {
            "type": "string",
            "enum": ["active", "hidden"]
          }
        },
        "required": ["id", "name", "address", "contact", "forwardUrl", "status"]
      }
    }
  },
  "required": ["version", "date", "stores"]
}
